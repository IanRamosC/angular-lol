doctype html
html(lang="pt-br" data-ng-app="angularLOL")
	head
		title Angles of Legends
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.10.0/angular-material.min.css")
		link(rel="stylesheet" href="stylesheets/main.css")

	body(data-ng-controller="getData")

		div(layout="row" layout-align="center center")
			md-input-container
				label Nickname
				input(type="text" data-ng-model="user.nickname")
			md-select(data-ng-model="user.locale" placeholder="Regi√£o")
				md-option(data-ng-repeat="region in regions" value="{{ region.abbrev }}") {{ region.name }}
			md-button.md-raised.md-primary(data-ng-click="btnCall(user)") Pesquisar

		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular-animate.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular-aria.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angular_material/0.10.0/angular-material.min.js")
		script(src="js/app.module.js")
		script(src="js/userService.js")
		script(src="js/mainCtrl.js")