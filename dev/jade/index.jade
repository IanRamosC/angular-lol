doctype html
html(lang="pt-br" data-ng-app="MainModule")
	head
		title Angles of Legends
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css")
		link(rel="stylesheet" href="stylesheets/main.css")

	body(data-ng-controller="MainCtrl")

		main
			.container
				.row
					form.col.s12.m8.l6.offset-m2.offset-l4
						.row
							.input-field.col.s12
								input.validate(id="nickname" type="text")
								label(for="nickname") Nickname
								a.waves-effect.waves-light.btn(data-ng-click="btnCall()") {{ btnName }}

		footer.page-gooter
				.footer-copyright
					.container Â© 2014 akaian.com
						a.text-lighten-4.right(href="#!") akaian.com

		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js")
		script(src="js/app.module.js")
		script(src="js/mainCtrl.js")
		script(src="https://code.jquery.com/jquery-2.1.1.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js")